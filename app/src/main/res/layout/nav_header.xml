<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@color/colorPrimary"
    android:id="@+id/cons_nav_header"
    android:padding="16dp"
    android:gravity="bottom"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_person"
        android:id="@+id/image_login"
       app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
    />
    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/nav_button_login_or_sign_up"
        android:backgroundTint="@color/colorPrimary"
        android:elevation="8dp"
        android:textColor="#fff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/image_login"
        android:text="@string/login_or_signup"
        app:layout_constraintTop_toTopOf="@id/image_login"
        />

</androidx.constraintlayout.widget.ConstraintLayout>